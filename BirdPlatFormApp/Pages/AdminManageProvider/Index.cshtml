@page
@model BirdPlatFormApp.Pages.AdminPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search By Provider Name" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].ProviderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].AvatarUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Provider) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvatarUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./BirdServicesList" asp-route-id="@item.Id">'View Services</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="/Login">Log out</a>
</div>

