    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].ProviderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider[0].RoleId)
